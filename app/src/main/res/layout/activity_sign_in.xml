<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignInActivity"
    android:background="#F0EFEF">


    <EditText
        android:id="@+id/sign_in_id"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sign_in_password"
        android:layout_marginBottom="10dp"
        android:background="@drawable/sign_in_line"
        android:paddingStart="5dp"
        android:hint="ID"/>

    <EditText
        android:id="@+id/sign_in_password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/sign_in_line"
        android:inputType="textPassword"
        android:paddingStart="5dp"
        android:hint="P/W"/>

    <Button
        android:id="@+id/sign_in_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:background="#00ff0000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_in_password"
        android:layout_marginTop="10dp"
        android:textSize="14dp"/>

    <Button
        android:id="@+id/sign_in_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:background="#00ff0000"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_in_sign_up"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>