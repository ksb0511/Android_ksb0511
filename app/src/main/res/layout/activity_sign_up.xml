<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUpActivity"
    android:background="#F0EFEF">


    <EditText
        android:id="@+id/sign_up_name"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textMultiLine|textNoSuggestions"
        android:background="@drawable/sign_in_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sign_up_id"
        android:layout_marginBottom="20dp"
        android:hint="이름"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/sign_up_id"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textMultiLine|textNoSuggestions"
        android:background="@drawable/sign_in_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sign_up_password"
        android:layout_marginBottom="20dp"
        android:hint="아이디"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/sign_up_password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/sign_in_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="패스워드"
        android:paddingStart="10dp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/sign_up_password_check"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:background="@drawable/sign_in_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_password"
        android:layout_marginTop="20dp"
        android:hint="패스워드 확인"
        android:paddingStart="10dp"/>

    <Button
        android:id="@+id/sign_up_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ff0000"
        android:text="회원가입"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_password_check"
        android:layout_marginTop="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>